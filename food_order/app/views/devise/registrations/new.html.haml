.row.text-center
  %h2=t('devise.singup')
.col-md-6.col-md-offset-3
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field.form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true , :class=>  "form-control"
    .field.form-group
      = f.label :name, t('devise.name')
      %br/
      = f.text_field :name, :class=>  "form-control"
    .field.form-group
      = f.label :gender, t('devise.gender')
      %br/
      %select#user_gender.selectpicker.form-control{:name => "user[gender]"}
        %option{:value => "1"}=t('devise.male')
        %option{:value => "2"}=t('devise.female')
    .field.form-group
      = f.label :password, t('devise.pass')
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", :class=> "form-control"
    .field.form-group
      = f.label :password_confirmation, t('devise.passcofirm')
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"
    .actions
      = f.submit t('devise.singup') , :class => "btn btn-default col-md-4 col-md-offset-4"
= render "devise/shared/links"