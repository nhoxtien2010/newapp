#signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2{:style => " margin-top:50px"}
  .panel.panel-info
    .panel-heading
      .panel-title=t('menu.editus') 
    .panel-body    
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        - if @chanpas == "false"
          .field.row.form-group
          
            .col-md-3
              %label Email
            .col-md-9
              = f.email_field :email, autofocus: true , :class =>"form-control"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              =t('devise.confirm')#{resource.unconfirmed_email}
          .field.row.form-group
            .col-md-3
              = f.label t('menu.name')
            .col-md-9
              = f.text_field :name, :class=>  "form-control"
          .field.row.form-group
            .col-md-3
              = f.label t('devise.gender')
            .col-md-9
              %select#user_gender.selectpicker.form-control{:name => "user[gender]"}
                %option{:value => true}=t('devise.male')
                %option{:value => false }=t('devise.female')
          
        - if @chanpas == "true"
          .field.row.form-group
            .col-md-3
              = f.label I18n.t('devise.pass')            
            .col-md-9
              = f.password_field :password, autocomplete: "off", :class=>"form-control"
            
          .field.row.form-group
            .col-md-3
              = f.label t('devise.passcofirm')
            .col-md-9
              = f.password_field :password_confirmation, autocomplete: "off",:class=> "form-control"
          .field.row.form-group
            .col-md-3
              = f.label t('devise.crpass')            
            .col-md-9
              = f.password_field :current_password, autocomplete: "off", :class=> "form-control"        
        
            
        

        .form-group{:style=>"border-top: 1px solid #999; padding-top:20px"}
          .center
            = f.submit t('menu.update'),:class=>"btn btn-primary clearfix"
            = link_to t('menu.back'), :back ,:class => "btn btn-warning "