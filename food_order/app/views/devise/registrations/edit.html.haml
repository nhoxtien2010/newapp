.col-md-6.col-md-offset-3
  %h2  
    Edit #{resource_name.to_s.humanize}

    
  %p= @abc  
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .field.form-group
    - if @chanpas == "false"
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true , :class =>"form-control"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field.form-group
        = f.label t('menu.name'),:name
        %br/
        = f.text_field :name, :class=>  "form-control"
      .field.form-group
        = f.label t('devise.gender'),:gender
        %br/
        %select#user_gender.selectpicker.form-control{:name => "user[gender]"}
          %option{:value => true}=t('devise.male')
          %option{:value => false }=t('devise.female')
      
    - if @chanpas == "true"
      .field.form-group
        = f.label t('devise.pass'),:password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off" , :class=>"form-control"
      .field.form-group
        = f.label t('devise.passcofirm'),:password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off",:class=> "form-control"
      .field.form-group
        = f.label t('devise.crpass'),:current_password
        %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "off", :class=> "form-control"
      .row.clearfix      
        = f.submit t('menu.update'),:class=>"btn btn-default center-block"
  %h3 Cancel my account
  %p
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: t('menu.confirm') }, method: :delete,:class => "btn btn-default"}
  = link_to t('menu.back'), :back ,:class => "btn btn-default pull-right"